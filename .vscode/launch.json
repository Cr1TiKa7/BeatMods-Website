    "version": "0.2.0",
    "configurations": [{
        "name": "Auto Debug Program",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "stopOnEntry": false,
        "restart": true,
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run-script", "debug"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9889
    }, ]
}